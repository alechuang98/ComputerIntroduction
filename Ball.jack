class Ball{
	field int pos,r,dest;
	field char in;
	constructor Ball new(){
		let pos=255;
		let r=40;
		do Screen.drawCircle(pos,pos-r,r);
		return this;
	}
	method void move(Scene scene){
		let in=Keyboard.keyPressed();
		if(in=132){
			let dest=pos+160;
			if(dest<(255+161)){
				while(pos<(dest-1)){
					do Screen.setColor(false);
					do Screen.drawCircle(pos,255-r,r);
					let pos=pos+20;
					do Screen.setColor(true);
					do Screen.drawCircle(pos,255-r,r);
					do scene.draw();
					do Sys.wait(5);
				}
			}
			return;
		}
		if(in=130){
			let dest=pos-160;
			if(dest>(255-161)){
				while(pos>(dest+1)){
					do Screen.setColor(false);
					do Screen.drawCircle(pos,255-r,r);
					let pos=pos-20;
					do Screen.setColor(true);
					do scene.draw();
					do Screen.drawCircle(pos,255-r,r);
					do Sys.wait(5);
				}
			}
		}
		return;
	}
	method void draw(){
		do Screen.drawCircle(pos,255-r,r);
		return;
	}
	method int _pos(){
		return pos;
	}
}